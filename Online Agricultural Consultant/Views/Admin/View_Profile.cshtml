@model Online_Agricultural_Consultant.Models.tblStaffDetail

@{
    ViewBag.Title = "View_Profile";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="page-content">

    <!-- Page header -->
    <div class="page-header">
        <div class="page-title">
            <br />
            <h3>Employees Details</h3>
        </div>
    </div>
  
    <div style="border: 1px solid;
    padding: 10px;">
        <hr />
        <div class="row">
            
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-12">
                        <center>
                            
                        <img src="@Model.Image" style="height:150px;width:150px;" />
                            </center>
                        <br />
                    </div>
                </div>
            
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="row">
                    <div class="col-sm-6"><h1><b> @Html.DisplayNameFor(model => model.EmpId) :</b></h1></div>
                    <div class="col-sm-6"><h1> @Html.DisplayFor(model => model.EmpId)</h1></div>
                </div>
                <div class="row">
                    <div class="col-sm-6"><h1><b> Name :</b></h1></div>
                    <div class="col-sm-6"><h1> @Html.DisplayFor(model => model.FirstName)</h1></div>
                </div>
                <div class="row">
                    <div class="col-sm-6"><h1><b> @Html.DisplayNameFor(model => model.Password) :</b></h1></div>
                    <div class="col-sm-6"><h1> @Html.DisplayFor(model => model.Password)</h1></div>
                </div>
                <div class="row">
                    <div class="col-sm-6"><h1><b> @Html.DisplayNameFor(model => model.FullAddress) :</b></h1></div>
                    <div class="col-sm-6"><h1> @Html.DisplayFor(model => model.FullAddress)</h1></div>
                </div>
                <div class="row">
                    <div class="col-sm-6"><h1><b> @Html.DisplayNameFor(model => model.Gender) :</b></h1></div>
                    <div class="col-sm-6"><h1> @Html.DisplayFor(model => model.Gender)</h1></div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="row">
                    <div class="col-sm-6"><h1><b> @Html.DisplayNameFor(model => model.MobileNo) :</b></h1></div>
                    <div class="col-sm-6"><h1> @Html.DisplayFor(model => model.MobileNo)</h1></div>
                </div>
                <div class="row">
                    <div class="col-sm-6"><h1><b> PanNo :</b></h1></div>
                    <div class="col-sm-6"><h1> @Html.DisplayFor(model => model.PanNo)</h1></div>
                </div>
                <div class="row">
                    <div class="col-sm-6"><h1><b> @Html.DisplayNameFor(model => model.EmailID) :</b></h1></div>
                    <div class="col-sm-6"><h1> @Html.DisplayFor(model => model.EmailID)</h1></div>
                </div>
                <div class="row">
                    <div class="col-sm-6"><h1><b> @Html.DisplayNameFor(model => model.Dob) :</b></h1></div>
                    <div class="col-sm-6"><h1> @Model.Dob.Value.ToString("dd-MMM-yyyy")</h1></div>
                </div>
                <div class="row">
                    <div class="col-sm-6"><h1><b> @Html.DisplayNameFor(model => model.AadharNo) :</b></h1></div>
                    <div class="col-sm-6"><h1> @Html.DisplayFor(model => model.AadharNo)</h1></div>
                </div>
            </div>
        </div>

    </div>


</div>

<br /><br /><br /><br /><br />