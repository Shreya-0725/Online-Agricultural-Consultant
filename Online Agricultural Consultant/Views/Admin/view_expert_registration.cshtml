@model IEnumerable<Online_Agricultural_Consultant.Models.tblExpertDetail>
@{
    ViewBag.Title = "view_expert_registration";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="page-content">

    <!-- Page header -->
    <div class="page-header">
        <div class="page-title">
            <br />
            <h1>
                <u>Manage Experts</u>
            </h1>
        </div>
    </div>
    @*<div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="/Admin/Dashboard">Dashboard</a></li>
            <li class="active">Manage Experts</li>
        </ul>
    </div>*@
    <div class="tabbable page-tabs">
        <div class="tab-content">

            <div class="tab-pane active fade in" id="inside">
                <div class="panel panel-default">
                    <div class="panel-heading"></div>
                    @if (Model.Count() > 0 && Model != null)
                    {
                    <div class="datatable">
                        <table class="table" style="font-size:15px;">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>ExpertID</th>
                                    <th>Password</th>
                                    <th>FullName</th>
                                    <th>Mobile</th>
                                    <th>Address</th>
                                    <th>Registration Date</th>
                                    <th>Image</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 0;
                                    foreach (var item in Model)
                                    {
                                        i++;
                                        <tr>
                                            <td>@i</td>
                                            <td>@item.ExpertId</td>
                                            <td>@item.Password</td>
                                            <td>@item.FirstName @item.LastName</td>
                                            <td>@item.MobileNo</td>
                                            <td>@item.Address</td>
                                            <td>@item.CreateDate.Value.ToString("dd-MMM-yyyy")</td>
                                            <td>
                                                <a href="@item.Image">
                                                    <img src="@item.Image" style="height:80px;width:80px;" />

                                                </a>
                                            </td>
                                            <td>
                                                <a href="/Admin/View_Expert_Profile?ID=@item.ExpertId" class="btn btn-success btn-xs">View Details</a><br />
                                                <a href="" class="btn btn-danger btn-xs">Delete</a>
                                            </td>
                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>
                    </div>
                    }
                    else
                    {
                        <h3>No Data !</h3>
                    }


                </div>
            </div>

        </div>
    </div>

</div>

