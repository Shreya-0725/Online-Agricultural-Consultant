@model IEnumerable<Online_Agricultural_Consultant.Models.tblFarmerDetail>
@{
    ViewBag.Title = "view_farmer_registration";
    Layout = "~/Views/Shared/KisanKendraLayout.cshtml";
}
<div class="page-content">

    <!-- Page header -->
    <div class="page-header">
        <div class="page-title">
            <h3>View Farmer Registration </h3>
        </div>
    </div>
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="/KisanKendra/Dashboard">Dashboard</a></li>
            <li class="active">View Farmer Registration </li>
        </ul>
    </div>
    <div class="tabbable page-tabs">
        <div class="tab-content">

            <div class="tab-pane active fade in" id="inside">
                <div class="panel panel-default">
                    <div class="panel-heading"></div>
                    @if (Model.Count() > 0 && Model != null)
                    {
                        <div class="datatable">
                            <table class="table" style="font-size:15px;">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>FarmerID</th>
                                        <th>Password</th>
                                        <th>FullName</th>
                                        <th>Mobile</th>
                                        <th>Address</th>
                                        <th>Registration Date</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 0;
                                        foreach (var item in Model)
                                        {
                                            i++;
                                            <tr>
                                                <td>@i</td>
                                                <td>@item.FarmerId</td>
                                                <td>@item.Password</td>
                                                <td>@item.FirstName @item.LastName</td>
                                                <td>@item.MobileNo</td>
                                                <td>@item.Address</td>
                                                <td>@item.CreatedDate@*.Value.ToString("dd-MMM-yyyy")*@</td>
                                                <td>
                                                    <a href="/KisanKendra/GetfarmerAccessAccess?FarmerID=@item.FarmerId" class="btn btn-success btn-xs">Get Details</a>
                                                </td>
                                            </tr>
                                        }

                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <h3>No Data !</h3>
                    }


                </div>
            </div>

        </div>
    </div>

</div>


