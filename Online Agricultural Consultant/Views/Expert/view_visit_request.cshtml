@model IEnumerable<Online_Agricultural_Consultant.Models.tblSiteVisit>
@using Online_Agricultural_Consultant.Models
@{
    ViewBag.Title = "view_visit_request";
    Layout = "~/Views/Shared/ExpertLayout.cshtml";
}

<div class="page-content">

    <!-- Page header -->
    <div class="page-header">
        <div class="page-title">
            <br />      <br />
            <h1><u>Farm Visit Application</u></h1>
        </div>
    </div>
    <br />
    <div class="tabbable page-tabs">
        <div class="tab-content">
            @if (TempData["MSG__"] != null)
            {
                @Html.Raw(TempData["MSG__"])
            }
            <div class="tab-pane active fade in" id="inside">
                <div class="panel panel-default">
                    <div class="panel-heading"></div>
                    @if (Model.Count() > 0 && Model != null)
                    {
                        <div class="datatable">
                            <table class="table">
                                <thead style="font-size:15px;">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FarmerId)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FieldType)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FieldLocation)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CropDesc)
                                        </th>
                                        <th>
                                            Problem
                                        </th>
                                        <th>
                                            Date
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.VisitDate)
                                        </th>
                                        <th>
                                            Closing Date
                                        </th>
                                        <th>
                                            Action
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var item in Model)
                                        {
                                            <tr>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FarmerId)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FieldType)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FieldLocation)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CropDesc)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ProblemDesc)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CreationDate)
                                                </td>
                                                <td>
                                                    @if (item.VisitDate != null)
                                                    {
                                                        <b>@item.VisitDate</b>
                                                    }
                                                    else
                                                    {
                                                        <b style="color:red">Pending</b>
                                                    }
                                                </td>
                                                <td>
                                                    @if (item.ClosingDate != null)
                                                    {
                                                        <b>@item.ClosingDate</b>
                                                    }
                                                    else
                                                    {
                                                        <b style="color:red">Pending</b>
                                                    }
                                                </td>
                                                <td>
                                                    <a href="/Expert/ViewDetails_asssign_RTA?ID=@item.ID" class="btn btn-success btn-xs">View Details</a>
                                                </td>


                                            </tr>
                                        }

                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <h3>No Data !</h3>
                    }


                </div>
            </div>

        </div>
    </div>

</div>

