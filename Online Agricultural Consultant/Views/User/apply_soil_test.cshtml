@model Online_Agricultural_Consultant.Models.tblFarmerDetail
@{
    ViewBag.Title = "apply_soil_test";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<div class="page-content">

    <!-- Page header -->
    <div class="page-header">
        <div class="page-title">
            <br />
            <h1>
                <u>Apply Soil Test</u>
            </h1>
        </div>
    </div>
   <br />
    @if (TempData["sv_msg1"] != null)
    {
        <div class="callout callout-success fade in">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <h3>@TempData["sv_msg1"]</h3>
        </div>
    }

    <form class="form-horizontal" action="/USer/apply_soil_test" method="post" role="form" enctype="multipart/form-data">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-sm-6">
                        <p>Name</p>
                        <input type="text" class="form-control" name="FirstName" value=" @Model.FirstName" required>
                    </div>

                    <div class="col-sm-6">
                        <p>Addess</p>
                        <input type="text" class="form-control" name="Address" value="@Model.Address" required>
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-sm-9">
                        <input type="submit" value="Apply" class="btn btn-success">
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


