
@{
    ViewBag.Title = "applyrealtimeAssistent";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<div class="page-content">

    <!-- Page header -->
    <div class="page-header">

        <div id="reportrange" class="range">

        </div>
    </div>
    <!-- /page header -->
    <!-- Breadcrumbs line -->
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="/User/Dashboard">Dashboard</a></li>
            <li class="active">Real time Assiment</li>
        </ul>
    </div>
    <!-- /breadcrumbs line -->
    <!-- Callout -->
    @if (TempData["sv_msg"] != null)
    {
        <div class="callout callout-success fade in">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <h3>@TempData["sv_msg"]</h3>
        </div>
    }

    <form class="form-horizontal" action="/USer/applyrealtimeAssistent" method="post" role="form" enctype="multipart/form-data">
        <div class="panel panel-default">
            <center>
                <h1>
                    <u>  REAL TIME ASSISTMENT</u>
                </h1>
            </center>
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-sm-6">
                        <p>Field Type</p>
                        <input type="text" class="form-control" name="FieldType" required placeholder="Enter FieldType">
                    </div>

                    <div class="col-sm-6">
                        <p>Field Location</p>
                        <input type="text" class="form-control" name="FieldLocation" placeholder="Enter FieldLocation">
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-sm-9">
                        <p>Crop Description</p>
                        <textarea rows="5" cols="5" name="CropDesc" required class="form-control"></textarea>
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-sm-9">
                        <p>Problem</p>
                        <textarea rows="5" cols="5" name="ProblemDesc" required class="form-control"></textarea>
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-sm-9">
                        <input type="submit" value="Submit form" class="btn btn-success">
                        <input type="reset" value="Clear" class="btn btn-warning">
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
